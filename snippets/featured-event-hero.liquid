              <p>{{ line }}</p>
        {% endfor %}

        {% if article.metafields.accentuate.featured_event_hero_link != blank %}
              <a href="/blogs/{{ article.metafields.accentuate.featured_event_hero_link}}" class="learn__more">Learn More</a>
